<section>
		<ul class="posts">
			<% @side_posts.each do |post| %>
				<li>
					<article>
						<header>
							<h3><%= link_to post.title_uk, post %></h3>
							<time class="published"><%= localize(post.created_at, format: :side_post) %></time>
						</header>
						<a href="#" class="image"><%= image_tag(post.post_photo) %></a>
					</article>
				</li>
			<% end %>
		</ul>
</section>