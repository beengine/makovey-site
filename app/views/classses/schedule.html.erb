<%= form_tag("/schedule", method: "post") do %>
  <%= select_tag(:id, options_from_collection_for_select(Classs.all, :id, :name_uk)) %>
  <%= submit_tag("Вибрати") %>
<% end %>
<div class="table-wrapper">
	<table>
		<thead>
			<tr>
				<th>Понеділок</th>
				<th>Вівторок</th>
				<th>Середа</th>
				<th>Четвер</th>
				<th>П'ятниця</th>
				<th>Субота</th>
			</tr>
		</thead>
		<tbody>

			<% 8.times do |tt| %>
			<tr>
				<% @schedules.select { |g| g.lesson == tt} .each do |rr| %>
				<td>
					<% unless rr.subject.blank? %> 
						<%= content_tag :h5, rr.subject.name_uk  %>
						<%= content_tag :a, rr.teacher.initials, href: teacher_path(rr.teacher) %>
					<% end %>
				</td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>